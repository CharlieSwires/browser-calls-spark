{{! index.mustache }}
{{<base}}
{{$header}}
{{<header}}
{{$title}}Find Person{{/title}}
{{/header}}
{{/header}}

{{$content}}
<div class="container">

    <h2>Find Person</h2>

    <p class="lead">
        This is the list of all the people I know about.
    </p>

   <div class="row">

        <div class="col-md-6 col-md-push-2">
 
            {{#person}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Name:</strong> {{name}}
                        </h3>
                    </div>
                    <div class="panel-body">

                        <div class="pull-right">
                            <button onclick="callCustomer('{{phoneNumber}}')" type="button"
                                    class="btn btn-primary btn-md call-customer-button">
                                <span class="glyphicon glyphicon-earphone"
                                      aria-hidden="true"></span>
                                Call
                            </button>
                             <button onclick="disconnect('{{phoneNumber}}')" type="button"
                                    class="btn btn-danger btn-md call-customer-button">
                                
                                Hang Up
                            </button>
                        </div>

                        <p><strong>Phone number:</strong> {{phoneNumber}}</p>

 
                    </div>
                </div>
            {{/person}}
            {{^person}}
                <div class="panel panel-default">
                    <div class="well">
                        There are no people available.
                    </div>
                </div>
            {{/person}}
        </div>

    </div>
</div>
{{/content}}
{{/base}}
